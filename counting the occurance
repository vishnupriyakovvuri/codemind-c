#include<stdio.h>
int main()
{
    char s[100],p[100];
    scanf("%[^\n]s",s);
    scanf("%s",p);
    int c=0,i;
    for(i=0;s[i]!='\0';i++)
    {
        if(s[i]==p[0])
        {
            c+=1;
        }
    }
    if(c==0)
    {
        printf("%d",-1);
    }
    else
    {
        printf("%d",c);
    }
}
